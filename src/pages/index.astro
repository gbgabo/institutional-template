---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { SITE_NAME } from "../consts";
import Button from "../components/Button.astro";

const articles = [
  {
    title: "Advogado de família: o que fazer em caso de separação",
    description:
      "O advogado de família pode ajudá-lo a resolver disputas e litígios em caso de separação. Saiba como ele pode ajudá-lo a proteger seus direitos e interesses.",
    date: "2023-02-15",
    source: "Advogado.com.br",
  },
  {
    title: "Direitos dos pais: como proteger os filhos em caso de divórcio",
    description:
      "O divórcio pode ser um processo desafiador, especialmente quando há filhos envolvidos. Saiba como um advogado de família pode ajudá-lo a proteger os direitos dos pais e garantir o bem-estar das crianças.",
    date: "2023-03-22",
    source: "Jusbrasil.com.br",
  },
  {
    title: "Contrato de namoro: como funciona e quais são os benefícios",
    description:
      "O contrato de namoro é um acordo entre os parceiros que estabelece as regras e responsabilidades em caso de separação. Saiba como ele pode ajudá-lo a proteger seus bens e interesses.",
    date: "2023-04-10",
    source: "Advogado.com.br",
  },
];

const services = [
  {
    title: "Direito de Família",
    description:
      "Separação, divórcio, guarda de filhos, pensão alimentícia, herança, entre outros.",
    icon: "fa6-solid:user-tie",
  },
  {
    title: "Direito Tributário",
    description:
      "Declaração de imposto de renda, imposto de renda, contribuição previdenciária, entre outros.",
    icon: "fa6-solid:money-check-dollar",
  },
  {
    title: "Direito Imobiliário",
    description:
      "Contratos de compra e venda, locação, despejo, construção, entre outros.",
    icon: "fa6-solid:building",
  },
  {
    title: "Direito do Trabalho",
    description:
      "Contratos de trabalho, rescisão, horas extras, férias, entre outros.",
    icon: "fa6-solid:briefcase",
  },
  {
    title: "Direito Penal",
    description:
      "Crimes contra a vida, crimes contra o patrimônio, crimes contra a liberdade, entre outros.",
    icon: "fa6-solid:gavel",
  },
];
---

<Layout title={SITE_NAME}>
  <div class="flex flex-col min-h-screen">
    <main class="flex-1">
      <section
        class="w-full py-12 md:py-24 lg:py-32 xl:py-48 bg-[var(--color-muted)]"
      >
        <div class="container px-4 md:px-6">
          <div class="flex flex-col items-center space-y-4 text-center">
            <div class="space-y-2">
              <h1
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
              >
                {SITE_NAME}
              </h1>
              <p class="mx-auto max-w-[700px] text-muted-foreground md:text-xl">
                Fornecendo serviços jurídicos especializados com integridade e
                dedicação. Seu parceiro de confiança para navegar nas
                complexidades da lei.
              </p>
            </div>
            <div class="space-x-4">
              <Button value="Consulta Gratuita" />
              <Button variant="secondary" value="Saiba Mais" />
            </div>
          </div>
        </div>
      </section>
      <section id="services" class="w-full py-12 md:py-24 lg:py-32">
        <div class="container px-4 md:px-6">
          <h2
            class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-8 text-center"
          >
            Áreas de atuação
          </h2>
          <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
            {
              services.map(({ title, description, icon }) => (
                <Card icon={icon}>
                  <h3 slot="title" class="text-2xl text-center font-bold">
                    {title}
                  </h3>
                  <p slot="body" class="text-muted-foreground text-center">
                    {description}
                  </p>
                </Card>
              ))
            }
          </div>
        </div>
      </section>
      <section
        id="media"
        class="w-full py-12 md:py-24 lg:py-32 bg-[var(--color-muted)]"
      >
        <div class="container px-4 md:px-6">
          <h2
            class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-8 text-center"
          >
            Mídia
          </h2>
          <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
            {
              articles.map(({ title, description, date, source }) => {
                const datetime = new Date(date);
                return (
                  <Card>
                    <span slot="badge">{source}</span>
                    <h3 slot="title" class="text-xl font-semibold line-clamp-2">
                      <Icon name="fa6-solid:newspaper" class="inline" />
                      {title}
                    </h3>
                    <p slot="body" class="text-muted-foreground line-clamp-3">
                      {description}
                    </p>
                    <div slot="footer">
                      <p class="mb-1">
                        <time datetime={datetime.toISOString()}>
                          {datetime.toLocaleDateString("pt-BR", {
                            year: "numeric",
                            month: "short",
                            day: "numeric",
                          })}
                        </time>
                      </p>
                      <span class="font-bold">Ver Mais</span>
                    </div>
                  </Card>
                );
              })
            }
          </div>
        </div>
      </section>
      <section id="about" class="w-full py-12 md:py-24 lg:py-32 bg-muted">
        <div class="container px-4 md:px-6">
          <div class="grid gap-10 lg:grid-cols-2 items-center">
            <div class="space-y-4">
              <h2
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
              >
                Sobre nós
              </h2>
              <p class="text-muted-foreground">
                O escritoŕio de advocacia atende a nossa comunidade há mais de
                25 anos. Nossa equipe de advogados experientes se dedica a
                fornecer soluções jurídicas personalizadas adaptadas às
                necessidades únicas de cada cliente. Nós nos orgulhamos do nosso
                compromisso com a excelência, integridade e satisfação do
                cliente.
              </p>
            </div>
            <div class="flex justify-center">
              <img
                src="/images/law-stamp.jpg"
                width={600}
                height={400}
                alt="Law firm team"
                class="rounded-lg object-cover"
              />
            </div>
          </div>
        </div>
      </section>
      <section
        id="contact"
        class="w-full py-12 md:py-24 lg:py-32 bg-[var(--color-muted)]"
      >
        <div class="container px-4 md:px-6">
          <div class="grid gap-10 lg:grid-cols-2">
            <div class="space-y-4">
              <h2
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
              >
                Contato
              </h2>
              <p class="text-muted-foreground">
                Entre em contato conosco para uma consulta gratuita. Nossa
                equipe está pronta para ajudá-lo com suas necessidades legais.
              </p>
              <div class="space-y-2">
                <div class="flex items-center space-x-2">
                  <span>123 Rua da Lei, Cidadeville, Estado 12345</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span>(123) 456-7890</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span>info@justicelawfirm.com</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span>Seg-Sex: 9h-17h</span>
                </div>
              </div>
            </div>
            <div class="space-y-4">
              <form class="grid grid-cols-1 gap-4 h-full">
                <input
                  class="col-span-1 p-2 rounded-sm"
                  placeholder="Seu Nome"
                />
                <input
                  class="col-span-1 p-2 rounded-sm"
                  type="email"
                  placeholder="Seu Email"
                />
                <input
                  class="col-span-1 p-2 rounded-sm"
                  placeholder="Assunto"
                />
                <textarea
                  class="col-span-1 p-2 rounded-sm"
                  placeholder="Sua Mensagem"></textarea>
                <Button variant="dark" value="Enviar Mensagem" />
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>
